---
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { changeLanguage } from "i18next";

changeLanguage("en");

const steps = [
  {
    number: "01",
    title: "Eligibility",
    description: "Travel grants are available to students who:",
    points: [
      "Are currently enrolled in a BA, MA, or PhD program",
      "Have submitted an abstract for presentation",
      "Are traveling from outside the host city",
      "Can demonstrate financial need"
    ]
  },
  {
    number: "02",
    title: "Application",
    description: "To apply for a travel grant, submit:",
    points: [
      "CV or resume (max 2 pages)",
      "Motivation letter (max 500 words)",
      "Budget estimation for travel and accommodation",
      "Proof of student status",
      "Letter of support from supervisor (optional)"
    ]
  },
  {
    number: "03",
    title: "Selection",
    description: "Applications will be evaluated based on:",
    points: [
      "Academic merit and research potential",
      "Relevance of presentation to conference themes",
      "Distance of travel and associated costs",
      "Available funding and number of applications"
    ]
  },
  {
    number: "04",
    title: "Award",
    description: "Selected applicants will receive:",
    points: [
      "Up to €500 for travel and accommodation",
      "Free conference registration",
      "Priority for student accommodation",
      "Certificate of grant award"
    ]
  }
];

const importantDates = [
  {
    date: "March 1, 2024",
    event: "Grant application opens"
  },
  {
    date: "April 15, 2024",
    event: "Application deadline"
  },
  {
    date: "May 1, 2024",
    event: "Notification of decisions"
  },
  {
    date: "May 15, 2024",
    event: "Acceptance deadline"
  }
];
---

<Layout title="Travel Grants">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Travel Grants</Fragment>
      <Fragment slot="desc">Supporting the next generation of researchers</Fragment>
    </Sectionhead>

    <!-- Introduction Section -->
    <div class="mx-auto max-w-3xl mt-16">
      <div class="prose prose-lg dark:prose-invert">
        <p class="text-gray-600 dark:text-gray-400">
          ConSOLE34 is committed to supporting student participation. We offer a limited number of travel grants to help students attend and present their research at the conference.
        </p>
      </div>
    </div>

    <!-- Important Dates -->
    <div class="mx-auto max-w-7xl mt-16">
      <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-8">Important Dates</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        {importantDates.map(({ date, event }) => (
          <div class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-stone-950 px-8 pb-8 pt-32 sm:pt-64 lg:pt-30">
            <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40" />
            <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10" />
            <p class="text-blue-400 dark:text-blue-400 font-semibold mb-2">{date}</p>
            <p class="text-gray-200 dark:text-gray-200">{event}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Process Steps -->
    <div class="mx-auto max-w-7xl mt-16 space-y-12">
      {steps.map((step) => (
        <div class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-stone-950 px-8 pb-8 pt-32 sm:pt-64 lg:pt-30">
          <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40" />
          <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10" />
          
          <div class="flex flex-col md:flex-row gap-8 items-start">
            <div class="flex-shrink-0">
              <span class="inline-block bg-blue-600 text-white text-2xl font-bold rounded-lg w-16 h-16 flex items-center justify-center">
                {step.number}
              </span>
            </div>
            <div class="flex-grow">
              <h3 class="text-xl font-bold text-white mb-4">{step.title}</h3>
              <p class="text-gray-300 dark:text-gray-300 mb-4">{step.description}</p>
              <ul class="space-y-2">
                {step.points.map((point) => (
                  <li class="flex items-start">
                    <span class="text-blue-400 dark:text-blue-400 mr-2">•</span>
                    <span class="text-gray-200 dark:text-gray-200">{point}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Contact Section -->
    <div class="mx-auto max-w-3xl mt-16">
      <div class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gradient-to-r from-blue-600 to-indigo-600 px-8 pb-8 pt-32 sm:pt-64 lg:pt-30">
        <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10" />
        <div class="text-center">
          <h2 class="text-2xl font-bold text-white mb-4">Questions?</h2>
          <p class="text-gray-100 mb-6">
            If you have any questions about the travel grant application process, please don't hesitate to contact us.
          </p>
          <a
            href="mailto:console34@example.com"
            class="inline-block bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors">
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </Container>
</Layout>

<style>
  /* Add smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }
</style> 