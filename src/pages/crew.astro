  .card:hover {
    transform: translateY(-2px);
  }

  .hover-text {
    transition: all 0.3s ease;
    cursor: pointer;
  }
</style>

<script>
  function setupHoverTexts() {
    const hoverTexts = document.querySelectorAll('.hover-text');
    
    hoverTexts.forEach(element => {
      const originalText = element.getAttribute('data-original');
      const hoverText = element.getAttribute('data-hover');
      
      element.addEventListener('mouseenter', () => {
        element.textContent = hoverText;
      });
      
      element.addEventListener('mouseleave', () => {
        element.textContent = originalText;
      });
    });
  }

  // Run immediately in case the DOM is already loaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupHoverTexts);
  } else {
    setupHoverTexts();
  }
  
  // Setup after view transitions
  document.addEventListener('astro:after-swap', setupHoverTexts);
</script> 