<section class="bg-red-500 px-6 py-3">
  <div class="relative pr-6">
    <div class="flex flex-wrap items-center justify-center gap-5 text-center">
      <p class="inline-flex text-sm font-medium text-white lg:text-base">
        Hurry Up! Call for paper closes in
      </p>
      <div
        id="countdown"
        class="inline-flex items-center gap-1.5 text-lg font-medium text-white"
      >
        <span id="days" class="rounded-lg bg-white/10 px-4 py-2">00</span>
        <span>:</span>
        <span id="hours" class="rounded-lg bg-white/10 px-4 py-2">00</span>
        <span>:</span>
        <span id="minutes" class="rounded-lg bg-white/10 px-4 py-2">00</span>
        <span>:</span>
        <span id="seconds" class="rounded-lg bg-white/10 px-4 py-2">00</span>
      </div>
